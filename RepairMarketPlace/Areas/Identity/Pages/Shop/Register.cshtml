@page
@model Web.Areas.Identity.Pages.Shop.RegisterModel
@{
    ViewData["Title"] = "Shop Register";
}

<h1>@ViewData["Title"]</h1>

<h4>Create a new shop account.</h4>
<hr />
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.WebSite"></label>
                <input asp-for="Input.WebSite" class="form-control" />
                <span asp-validation-for="Input.WebSite" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.Birthday"></label>
                <input asp-for="Input.Birthday" class="form-control" />
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ShopName"></label>
                <input asp-for="Input.ShopName" class="form-control" />
                <span asp-validation-for="Input.ShopName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ShopAddress"></label>
                <input asp-for="Input.ShopAddress" class="form-control" />
                <span asp-validation-for="Input.ShopAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register Shop</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

